# Parámetros para simulación de estufa turbomecánica

# Dimensiones de la turbina (en metros)
TURBINE_DIAMETER=0.3
TURBINE_LENGTH=0.2

# Revoluciones por minuto del motor
TURBINE_RPM=2800

# Temperatura inicial del aire (en grados Celsius)
AIR_INITIAL_TEMP=15

# Temperatura objetivo del aire (en grados Celsius)
AIR_TARGET_TEMP=25

# Densidad del aire (kg/m3), usualmente 1.225 a 20ºC
AIR_DENSITY=1.225

# Calor específico del aire (J/kg·K), valor típico: 1005
AIR_SPECIFIC_HEAT=1005

# Volumen del ambiente a calentar (m3)
ROOM_VOLUME=30

# Masa total de material estructural (paredes, techo, etc. en kg)
STRUCTURE_MASS=3000

# Calor específico promedio del material estructural (J/kg·K)
STRUCTURE_SPECIFIC_HEAT=840

# Factor de pérdida de calor por estructura (W/K) [opcional]
HEAT_LOSS_COEFFICIENT=80

# Potencia máxima disponible del sistema (Watts)
MAX_HEATER_POWER=2000

# Tiempo de simulación (segundos)
SIMULATION_TIME=3600